<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassingIntentsExercise">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="220dp"
            android:layout_height="39dp"
            android:text="Student Registration Form" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="Complete Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/eFname"
                android:layout_width="199dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="First Name" />

            <EditText
                android:id="@+id/eLName"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Last Name" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:text="Gender" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="406dp"
                android:layout_height="69dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbtnMale"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/rdbtnFemale"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/rdbtnOthers"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Others" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="168dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Birthdate" />

            <EditText
                android:id="@+id/eBDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="168dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Phone Number" />

            <EditText
                android:id="@+id/eNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="168dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Email Address" />

            <EditText
                android:id="@+id/eMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:text="Previous School" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="406dp"
                android:layout_height="69dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbtnCit"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="CIT-U" />

                <RadioButton
                    android:id="@+id/rdbtnUsjr"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="USJR" />

                <RadioButton
                    android:id="@+id/rdbtnUsc"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="USC" />

                <RadioButton
                    android:id="@+id/rdbtnotherschool"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Others" />

            </RadioGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="406dp"
                android:layout_height="69dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbtnSingle"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Single" />

                <RadioButton
                    android:id="@+id/rdbtnMarried"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Married" />


            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="168dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Emergency Contact:" />

            <EditText
                android:id="@+id/eCName"
                android:layout_width="199dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="168dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Contact Number:" />

            <EditText
                android:id="@+id/eCNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="168dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Allergies: " />

            <EditText
                android:id="@+id/eAllergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cornerRadius="35dp"
                android:text="Clear" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cornerRadius="35dp"
                android:text="Submit" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>